<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bcoder.drawablesamples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ShapeActivity"
            android:label="@string/bcoder_com">
        </activity>
        <activity
            android:name=".RoundRectBtnActivity"
            android:label="@string/round_rect_btn_activity_title">
        </activity>
        <activity
            android:name=".RoundRectOvalBtnActivity"
            android:label="@string/bcoder_com">
        </activity>
        <activity android:name=".LeafBtnActivity"
            android:label="@string/bcoder_com">
        </activity>
    </application>

</manifest>